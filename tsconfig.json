{
    "compilerOptions": {
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "allowJs": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./build",
        "lib": [ "es2015" ]
    },
    "exclude": [
        "node_modules/**"
    ],
    "include": [
        "./ts"
    ]
}
